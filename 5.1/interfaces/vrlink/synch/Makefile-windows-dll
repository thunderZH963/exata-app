!IFNDEF VLHOME
!ERROR You must set the environment variable VLHOME to the VRLINK installation directory.
!ENDIF

SYNCH_VRLINK_INTERFACE_DIS_DSO_NAME = synch_vrlink_interface-dis.dll
SYNCH_VRLINK_INTERFACE_HLA13_DSO_NAME = synch_vrlink_interface-hla13.dll
SYNCH_VRLINK_INTERFACE_HLA1516_DSO_NAME = synch_vrlink_interface-hla1516.dll

SYNCH_VRLINK_INTERFACE_LIBRARIES = \
    vlutil.lib \
    vlutild.lib \
    vl.lib \
    matrix.lib \
    mtl.lib \
    netapi32.lib \
    iphlpapi.lib \
    comctl32.lib \
    WS2_32.lib


!IF "$(ARCH)" == "windows-x64"
VRLINK_LIB_DIR = $(VLHOME)\lib64
SYNCH_VRLINK_INTERFACE_LIBRARIES = $(SYNCH_VRLINK_INTERFACE_LIBRARIES) iconv_64.lib libxml2_64.lib
!ELSEIF "$(ARCH)" == "windows"
VRLINK_LIB_DIR = $(VLHOME)\lib
SYNCH_VRLINK_INTERFACE_LIBRARIES = $(SYNCH_VRLINK_INTERFACE_LIBRARIES) iconv.lib libxml2.lib
!ENDIF

#
# DIS section
#
SYNCH_VRLINK_INTERFACE_DIS_DSO_OBJS = \
    $(SYNCH_VRLINK_INTERFACE_SRC_DIR)/vrlink_shared.obj-dis-synch-$(ARCH)-$(COMPILER) \
    $(SYNCH_VRLINK_INTERFACE_SRC_DIR)/vrlink_main.obj-dis-synch-$(ARCH)-$(COMPILER) \
    $(SYNCH_VRLINK_INTERFACE_SRC_DIR)/vrlink_dis.obj-dis-synch-$(ARCH)-$(COMPILER)

SYNCH_VRLINK_INTERFACE_DIS_INCLUDES = \
    $(SYNCH_VRLINK_INTERFACE_INCLUDES) -I$(VLHOME)\include

SYNCH_VRLINK_INTERFACE_DIS_LIBRARIES = \
    /libpath:"$(VRLINK_LIB_DIR)" $(SYNCH_VRLINK_INTERFACE_LIBRARIES) vlDIS.lib

../bin/$(SYNCH_VRLINK_INTERFACE_DIS_DSO_NAME): $(SYNCH_VRLINK_INTERFACE_DIS_DSO_OBJS)
	$(CXX) /nologo /Fe$@ $(DEBUG) $(OPT) $(SYNCH_VRLINK_INTERFACE_DIS_DSO_OBJS) $(LIBRARIES_LIB) /link /DLL /DEF:../interfaces/vrlink/vrlink_interface_dll.def /DEBUG $(SYNCH_VRLINK_INTERFACE_DIS_LIBRARIES)

.cpp.obj-dis-synch-$(ARCH)-$(COMPILER):
	$(CXX) $(SYNCH_CXXFLAGS) $(SYNCH_VRLINK_INTERFACE_DIS_INCLUDES) -DT_USE_DLL -DDtDIS /Fo$@ /c $<

include ../interfaces/vrlink/Makefile-windows-rti

#
# HLA 13 section
#
SYNCH_VRLINK_INTERFACE_HLA13_DSO_OBJS = \
    $(SYNCH_VRLINK_INTERFACE_SRC_DIR)/vrlink_shared.obj-hla13-synch-$(ARCH)-$(COMPILER) \
    $(SYNCH_VRLINK_INTERFACE_SRC_DIR)/vrlink_main.obj-hla13-synch-$(ARCH)-$(COMPILER) \
    $(SYNCH_VRLINK_INTERFACE_SRC_DIR)/vrlink_hla.obj-hla13-synch-$(ARCH)-$(COMPILER)

SYNCH_VRLINK_INTERFACE_HLA13_INCLUDES = \
    $(SYNCH_VRLINK_INTERFACE_INCLUDES) -I$(VLHOME)\include -I$(RTI_HLA13_INCLUDE_DIR)

SYNCH_VRLINK_INTERFACE_HLA13_LIBRARIES = \
    /libpath:"$(VRLINK_LIB_DIR)" $(SYNCH_VRLINK_INTERFACE_LIBRARIES) vlHLA13.lib \
    /libpath:"$(RTI_LIB_DIR)" $(RTI_HLA13_LIBRARY) $(RTI_ADDITIONAL_LIBRARIES)

../bin/$(SYNCH_VRLINK_INTERFACE_HLA13_DSO_NAME): $(SYNCH_VRLINK_INTERFACE_HLA13_DSO_OBJS)
	$(CXX) /nologo /Fe$@ $(DEBUG) $(OPT) $(SYNCH_VRLINK_INTERFACE_HLA13_DSO_OBJS) $(LIBRARIES_LIB) /link /DLL /DEF:../interfaces/vrlink/vrlink_interface_dll.def /DEBUG $(SYNCH_VRLINK_INTERFACE_HLA13_LIBRARIES)


.cpp.obj-hla13-synch-$(ARCH)-$(COMPILER):
	$(CXX) $(SYNCH_CXXFLAGS) $(SYNCH_VRLINK_INTERFACE_HLA13_INCLUDES) -DT_USE_DLL -DDtHLA -DDtHLA13 $(RTI_DEFINES) /Fo$@ /c $<

#
# HLA 1516 section
#
SYNCH_VRLINK_INTERFACE_HLA1516_DSO_OBJS = \
    $(SYNCH_VRLINK_INTERFACE_SRC_DIR)/vrlink_shared.obj-hla1516-synch-$(ARCH)-$(COMPILER) \
    $(SYNCH_VRLINK_INTERFACE_SRC_DIR)/vrlink_main.obj-hla1516-synch-$(ARCH)-$(COMPILER) \
    $(SYNCH_VRLINK_INTERFACE_SRC_DIR)/vrlink_hla.obj-hla1516-synch-$(ARCH)-$(COMPILER)

SYNCH_VRLINK_INTERFACE_HLA1516_INCLUDES = \
    $(SYNCH_VRLINK_INTERFACE_INCLUDES) -I$(VLHOME)\include -I$(RTI_HLA1516_INCLUDE_DIR)

SYNCH_VRLINK_INTERFACE_HLA1516_LIBRARIES = \
    /libpath:"$(VRLINK_LIB_DIR)" $(SYNCH_VRLINK_INTERFACE_LIBRARIES) vlHLA1516.lib \
    /libpath:"$(RTI_LIB_DIR)" $(RTI_HLA1516_LIBRARY) $(RTI_ADDITIONAL_LIBRARIES) 

../bin/$(SYNCH_VRLINK_INTERFACE_HLA1516_DSO_NAME): $(SYNCH_VRLINK_INTERFACE_HLA1516_DSO_OBJS)
	$(CXX) /nologo /Fe$@ $(DEBUG) $(OPT) $(SYNCH_VRLINK_INTERFACE_HLA1516_DSO_OBJS) $(LIBRARIES_LIB) /link /DLL /DEF:../interfaces/vrlink/vrlink_interface_dll.def /DEBUG $(SYNCH_VRLINK_INTERFACE_HLA1516_LIBRARIES)


.cpp.obj-hla1516-synch-$(ARCH)-$(COMPILER):
	$(CXX) $(SYNCH_CXXFLAGS) $(SYNCH_VRLINK_INTERFACE_HLA1516_INCLUDES) -DT_USE_DLL -DDtHLA -DDtHLA_1516 $(RTI_DEFINES) /Fo$@ /c $<

#
# Targets
#
SYNCH_VRLINK_INTERFACE_SHARED_OBJECTS = \
    ../bin/$(SYNCH_VRLINK_INTERFACE_DIS_DSO_NAME) \
    ../bin/$(SYNCH_VRLINK_INTERFACE_HLA13_DSO_NAME) \
    ../bin/$(SYNCH_VRLINK_INTERFACE_HLA1516_DSO_NAME)


ADDON_DEPS      = $(ADDON_DEPS) $(SYNCH_VRLINK_INTERFACE_SHARED_OBJECTS)

clean-vrlink-synch-all:
    -del $(SYNCH_VRLINK_INTERFACE_DIS_DSO_OBJS) > NUL 2>&1
    -del $(SYNCH_VRLINK_INTERFACE_HLA13_DSO_OBJS) > NUL 2>&1
    -del $(SYNCH_VRLINK_INTERFACE_HLA1516_DSO_OBJS) > NUL 2>&1
    -del ..\bin\$(SYNCH_VRLINK_INTERFACE_DIS_DSO_NAME:.dll=.exp) > NUL 2>&1
    -del ..\bin\$(SYNCH_VRLINK_INTERFACE_DIS_DSO_NAME:.dll=.ilk) > NUL 2>&1
    -del ..\bin\$(SYNCH_VRLINK_INTERFACE_DIS_DSO_NAME:.dll=.lib) > NUL 2>&1
    -del ..\bin\$(SYNCH_VRLINK_INTERFACE_DIS_DSO_NAME:.dll=.pdb) > NUL 2>&1
    -del ..\bin\$(SYNCH_VRLINK_INTERFACE_DIS_DSO_NAME) > NUL 2>&1
    -del ..\bin\$(SYNCH_VRLINK_INTERFACE_HLA13_DSO_NAME:.dll=.exp) > NUL 2>&1
    -del ..\bin\$(SYNCH_VRLINK_INTERFACE_HLA13_DSO_NAME:.dll=.ilk) > NUL 2>&1
    -del ..\bin\$(SYNCH_VRLINK_INTERFACE_HLA13_DSO_NAME:.dll=.lib) > NUL 2>&1
    -del ..\bin\$(SYNCH_VRLINK_INTERFACE_HLA13_DSO_NAME:.dll=.pdb) > NUL 2>&1
    -del ..\bin\$(SYNCH_VRLINK_INTERFACE_HLA13_DSO_NAME) > NUL 2>&1
    -del ..\bin\$(SYNCH_VRLINK_INTERFACE_HLA1516_DSO_NAME:.dll=.exp) > NUL 2>&1
    -del ..\bin\$(SYNCH_VRLINK_INTERFACE_HLA1516_DSO_NAME:.dll=.ilk) > NUL 2>&1
    -del ..\bin\$(SYNCH_VRLINK_INTERFACE_HLA1516_DSO_NAME:.dll=.lib) > NUL 2>&1
    -del ..\bin\$(SYNCH_VRLINK_INTERFACE_HLA1516_DSO_NAME:.dll=.pdb) > NUL 2>&1
    -del ..\bin\$(SYNCH_VRLINK_INTERFACE_HLA1516_DSO_NAME) > NUL 2>&1


ADDONS_CLEAN = $(ADDONS_CLEAN) clean-vrlink-synch-all

vrlink-synch-dsos: $(SYNCH_VRLINK_INTERFACE_SHARED_OBJECTS)	
	
store-vrlink-synch-dsos: vrlink-synch-dsos
    copy ..\bin\$(SYNCH_VRLINK_INTERFACE_DIS_DSO_NAME) ..\lib\$(ARCH)-$(COMPILER)\vrlink\$(SYNCH_VRLINK_INTERFACE_DIS_DSO_NAME)
    copy ..\bin\$(SYNCH_VRLINK_INTERFACE_HLA13_DSO_NAME) ..\lib\$(ARCH)-$(COMPILER)\vrlink\$(SYNCH_VRLINK_INTERFACE_HLA13_DSO_NAME)    
    copy ..\bin\$(SYNCH_VRLINK_INTERFACE_HLA1516_DSO_NAME) ..\lib\$(ARCH)-$(COMPILER)\vrlink\$(SYNCH_VRLINK_INTERFACE_HLA1516_DSO_NAME)

build-and-store-vrlink-synch-dsos: vrlink-synch-dsos store-vrlink-synch-dsos